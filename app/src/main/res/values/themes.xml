<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DownBeat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/downBeat_orange</item>
        <item name="colorPrimaryVariant">@color/downBeat_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Custom themes for toolbar (Blue Hamburger and Abel Title Text)-->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="titleTextAppearance">@style/TitleBarText</item>
    </style>

    <style name="DownBeat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DownBeat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Theme.DownBeat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!--Change colour below to change hamburger colour-->
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/downBeat_blue</item>
        <item name="thickness">5dp</item>
        <item name="barLength">@dimen/burgerWidth</item>
        <item name="android:gravity">left</item>>
    </style>

    <!--Change colour/style of text at top of screen (Title Bar)-->
    <style name="TitleBarText" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textAllCaps">true</item>

    </style>



</resources>